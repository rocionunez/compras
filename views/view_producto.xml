<odoo>
    <data>

        <!-- formulario de productos-->

        <record model="ir.ui.view" id="compras.producto_view">
            <field name="name">Productos</field>
            <field name="model">compras.producto</field>
            <field name="arch" type="xml">
                <form string="Producto">
                    <sheet>
                        <group>
                            <!-- general-->
                            <field name="name"/>
                        </group>
                        <group col="4">
                            <!-- detalle -->
                            <field name="price"/>
                            <field name="description"/>
                            <field name="proveedor_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- vista de producto-->

        <record model="ir.ui.view" id="compras.producto_list">
            <field name="name">Gestión de Compras</field>
            <field name="model">compras.producto</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="price" />
                    <field name="description"/>
                    <field name="proveedor_id"/>
                </tree>
            </field>
        </record>



        <!-- acción - qué va a pasar cuando ejecute el menú del producto-->
        <record model="ir.actions.act_window" id="compras.producto_action_window">
            <field name="name">Productos</field>
            <field name="res_model">compras.producto</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- action server producto-->
        <record model="ir.actions.server" id="compras.producto_action_server">
            <field name="name">producto server</field>
            <field name="model_id" ref="model_compras_producto"/>
            <field name="state">code</field>
            <field name="code">
            action = {
            "type": "ir.actions.act_window",
            "view_mode": "tree,form",
            "res_model": self._name,
            }
            </field>
        </record>

        <!-- formulario proveedor-->
        <record id="compras.proveedor_view" model="ir.ui.view">
            <field name="name">Proveedor</field>
            <field name="model">compras.proveedor</field>
            <field name="arch" type="xml">
                <form string="Proveedor">
                    <sheet>
                        <Separator string="Datos"/>
                        <group col="4">
                            <field name="name" />
                            <field name="business_category" widget='radio'/>
                            <field name="region" widget='radio'/>
                            <field name="city"/>
                            <field name="email" widget='email'/>
                            <field name="phone_number" widget='phone'/>
                            <field name="website" widget='url'/>
                        </group>
                        <Separator string="Productos"/>
                        <group>
                            <field name="producto_ids" nolabel="1">
                                <tree string="Productos" editable="bottom">
                                    <field name="name"/>
                                    <field name="price" />
                                    <field name="description"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- lista de proveedor-->
        <record model="ir.ui.view" id="compras.proveedor_list">
            <field name="name">Proveedor</field>
            <field name="model">compras.proveedor</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="total_productos"/>
                </tree>
            </field>
        </record>

        <!-- action window proveedor-->
        <record model="ir.actions.act_window" id="compras.proveedor_action_window">
            <field name="name">Proveedor</field>
            <field name="res_model">compras.proveedor</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- action server proveedor-->
        <record model="ir.actions.server" id="compras.proveedor_action_server">
            <field name="name">proveedor server</field>
            <field name="model_id" ref="model_compras_proveedor"/>
            <field name="state">code</field>
            <field name="code">
            action = {
            "type": "ir.actions.act_window",
            "view_mode": "tree,form",
            "res_model": self._name,
            }
            </field>
        </record>

        <!-- formulario orden de compra-->
        <record id="compras.ordencompra_view" model="ir.ui.view">
            <field name="name">Orden</field>
            <field name="model">compras.ordencompra</field>
            <field name="arch" type="xml">
                <form string="Proveedor">
                    <sheet>
                        <Separator string="Orden de Compra"/>
                        <group col="4">
                            <field name="name" />
                            <field name="date_order"/>
                            <field name="notes" />
                            <field name="proveedor_id" string="Proveedor">
                               <tree>
                                    <field name="name"/> 
                               </tree>
                            </field>
                        </group>
                        <Separator string="Detalle"/>
                        <group>
                            <field name="detalle_ids" nolabel="1">
                                <tree string="Producto" >
                                    <field name="producto_ids"/>
                                </tree> 
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
                <!-- lista de  la orden-->
        <record model="ir.ui.view" id="compras.ordencompra_list">
            <field name="name">Orden</field>
            <field name="model">compras.ordencompra</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="detalle_ids"/>
                </tree>
            </field>
        </record>

        <!-- action window orden compra-->
        <record model="ir.actions.act_window" id="compras.ordencompra_action_window">
            <field name="name">Orden</field>
            <field name="res_model">compras.ordencompra</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- action server orden compra-->
        <record model="ir.actions.server" id="compras.ordencompra_action_server">
            <field name="name">orden server</field>
            <field name="model_id" ref="model_compras_ordencompra"/>
            <field name="state">code</field>
            <field name="code">
            action = {
            "type": "ir.actions.act_window",
            "view_mode": "tree,form",
            "res_model": self._name,
            }
            </field>
        </record>






        <!-- top menu -->

        <menuitem name="Compras" id="compras.menu_root"/>
        <menuitem name="Orden de Compra" id="compras.menu_ordencompra" parent = "compras.menu_root" action="compras.ordencompra_action_window"/>
        <menuitem name="Proveedor" id="compras.proveedor" parent = "compras.menu_root" action="compras.proveedor_action_window"/>
        <menuitem name="Producto" id="compras.menu_producto" parent = "compras.menu_root" action="compras.producto_action_window"/>



        <!-- menu categories-->
        <!--
            <menuitem name="Menu 1" id="seguros.menu_1" parent="seguros.menu_root"/>
            <menuitem name="Menu 2" id="seguros.menu_2" parent="seguros.menu_root"/> -->
    </data>

</odoo>
